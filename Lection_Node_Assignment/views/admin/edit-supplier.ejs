<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="supplier-form" action="/admin/<% if (editing) { %>edit-supplier<% } else { %>add-supplier<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Supplier name</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= supplier.supplier_name %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Supplier email</label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%= supplier.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="country">Country</label>
                <input type="text" name="country" id="country" value="<% if (editing) { %><%= supplier.country %><% } %>">
            </div>
            <div class="form-control">
                <label for="countryCode">Country Code</label>
                <input type="text" name="countryCode" id="countryCode" value="<% if (editing) { %><%= supplier.countryCode %><% } %>">
            </div>
            <div class="form-control">
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<% if (editing) { %><%= supplier.city %><% } %>">
            </div>
            <div class="form-control">
                <label for="phoneNumber">Phone number</label>
                <input type="number" name="phoneNumber" id="phoneNumber" value="<% if (editing) { %><%= supplier.phone_number %><% } %>">
            </div>
            <div class="form-control">
                <label for="postalCode">Postal Code</label>
                <input type="number" name="postalCode" id="postalCode" value="<% if (editing) { %><%= supplier.postal_code %><% } %>">
            </div>
            <div class="form-control">
                <label for="address">Address</label>
                <textarea name="address" id="address" rows="5"><% if (editing) { %><%= supplier.address %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= supplier.product_id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>