<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Client name</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.client %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">Client email</label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%= product.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="country">Country</label>
                <input type="text" name="country" id="country" value="<% if (editing) { %><%= product.country %><% } %>">
            </div>
            <div class="form-control">
                <label for="city">City</label>
                <input type="number" name="city" id="city" step="0.01" value="<% if (editing) { %><%= product.city %><% } %>">
            </div>
            <div class="form-control">
                <label for="address">Address</label>
                <textarea name="address" id="address" rows="5"><% if (editing) { %><%= product.address %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product.product_id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>