<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.product_name %></h1>
                        </header>
                        <div class="card__image">
                            <% if(!product.imageurl) { %>
                                <img src="https://miro.medium.com/max/793/1*CfNQ1YaiOJ8OQ6fPEPIVDQ.png" alt="<%= product.product_name %>">
                            <% } else { %>
                                <img src="<%= product.imageurl %>" alt="<%= product.product_name %>">
                            <% } %>
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= Number(product.price).toFixed(2) %></h2>
                            <div class="product__description">
                                <% if(!product.description) { %>
                                    <p>No description!</p>
                                <% } else { %>
                                <p><%= product.description %></p>
                                <% } %>
                                </div>
                        </div>
                        <div class="card__actions">
                                <a href="/products/<%= product.id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>